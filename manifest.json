{
  "name": "WebLabel",
  "version": "1.0.0",
  "manifest_version": 2,

  "description": "",
   "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },

  "browser_action": {
    "default_icon": "img/icon.png", 
    "default_title": "Web Label",
    "default_popup": "browser/popup.html"
  },

  "background": {
      "scripts": [
        "js/background.js"
      ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "css": [
        "css/jquery-ui-1.8.21.custom.css",
        "css/jquery.simple-color-picker.css",
        "css/content.css"
      ],
      "js": [
        "js/jquery-1.7.2.min.js",
        "js/jquery-ui-1.8.21.custom.min.js",
        "js/jquery.simple-color-picker.js",
        "js/content.js"
      ]
    }
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",

  "permissions": [
      "https://*/*",
      "http://*/*",
      "contextMenus",
      "tabs",
      "unlimitedStorage"
  ]
}
